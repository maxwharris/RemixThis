# Default environment configuration (development)
# This file is used when no specific environment is set
# For production, use .env.production
# For development, use .env.development

NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL="file:./database/remixthis.db"

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production

# File Upload Configuration
MAX_FILE_SIZE=250000000
UPLOAD_PATH=../uploads

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Development-specific settings
DEBUG=true
LOG_LEVEL=debug

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=RemixThis <noreply@remixthis.com>
